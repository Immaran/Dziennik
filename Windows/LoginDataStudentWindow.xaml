<Window x:Class="SBD.Windows.LoginDataStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Zmiana hasła" SizeToContent="Height" Width="325" 
        MinWidth="250" MinHeight="185" Background="{StaticResource StudentPageBackground}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Label                             Margin="5" Padding="5">Aktualne hasło:</Label>
        <PasswordBox Name="actualPassword" Margin="5" Padding="5" Grid.Column="1"
                     PasswordChar="•" Style="{StaticResource StudentPasswordBox}"/>

        <Label                          Margin="5" Padding="5" Grid.Row="1">Nowe hasło:</Label>
        <PasswordBox Name="newPassword" Margin="5" Padding="5" Grid.Column="1" Grid.Row="1" 
                     ToolTip="Musi być długie na co najmniej 5 znaków."
                     PasswordChar="•" Style="{StaticResource StudentPasswordBox}"/>

        <Label                               Margin="5" Padding="5" Grid.Row="2">Powtórz nowe hasło:</Label>
        <PasswordBox Name="repeatedPassword" Margin="5" Padding="5" Grid.Column="1" Grid.Row="2"
                     PasswordChar="•" Style="{StaticResource StudentPasswordBox}"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button IsDefault="True" Click="OkClick" Margin="5" Padding="15,3" Style="{StaticResource StudentButton}">OK</Button>
            <Button IsCancel="True"                  Margin="5" Padding="15,3" Style="{StaticResource StudentButton}">Anuluj</Button>
        </StackPanel>
    </Grid>
</Window>
