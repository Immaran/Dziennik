<Page x:Class="SBD.Pages.HomeAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SBD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomeAdmin">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Grid.RowSpan="2" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center">Welcome in Home Admin</Label>
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <Button Padding="5" Click="ClickLoginData">Zarządzanie danymi logowania</Button>
            <Button Padding="5" Click="CLickGroup">Zarządzanie grupami</Button>
            <Button Padding="5" Click="ClickSubject">Zarządzanie przedmiotami</Button>
            <Button Padding="5" Click="ClickStudent">Zarządzanie uczniami</Button>
            <Button Padding="5" Click="ClickTeacher">Zarządzanie nauczycielami</Button>
        </StackPanel>
    </Grid>
</Page>
